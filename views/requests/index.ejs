    <div id="Login" class="planreq">

    <div class="container">
        <h1 class="mb-4 white">Requests</h1>
        <table class="table table-striped bg-white">
            <thead>
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Date</th>
                <th scope="col">Description</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
        <% requests.forEach(request => { %>
                  <tr>
                    <td><%= request.title %></td>
                    <td><%= request.createdAt.toLocaleDateString() %></td>
                    <td><%= request.description %></td>
                    <td><a href="requests/<%= request.slug %>" class="btn btn-primary">Read More</a>
                        <form action="/requests/<%= request.id %>?_method=Delete" class="d-inline" method="POST" >
                            <button type="submit" class="btn btn-danger">Delete</button></td>
                  </tr>

        <% }) %>
    </tbody>
  </table>

